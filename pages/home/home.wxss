.to_page {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    font-family: 'serif';
    font-style: italic;

}

.bkg_img {
    position: absolute;
    width: 100%;
    height: 100%;
}

.page_wrap {
    height: 100%;
    background-color: #fff;
}

.think_container {
    width: 100%;
    flex: 1;
    position: relative;
}

.think {
    position: absolute;
    left: 70%;
    top: 40%;
    width: 150rpx;
    height: 150rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
}

.focus_container {
    width: 100%;
    flex: 1;
    position: relative;
}

.focus {
    position: absolute;
    left: 25%;
    top: 20%;
    width: 250rpx;
    height: 250rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
}

.rest_container {
    width: 100%;
    flex: 1;
    position: relative;
}

.rest {
    position: absolute;
    left: 55%;
    top: 20%;
    width: 200rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
}

.collection_button {
    position: absolute;
    width: 100%;
    bottom: 0%;
    height: 10%;
    display: flex;
    flex-direction: row;
}

.rocket_img {
    width: 20%;
    height: 72%;
    position: absolute;
}

.collection_button button {
    width: 30% !important;
    height: 60% !important;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    border-radius: 0;
    border-color: white;
    color: white;
    left: -25%;
    font-weight: normal;
    font-size: medium;
    font-family: 'cursive';
    font-style: initial;
}