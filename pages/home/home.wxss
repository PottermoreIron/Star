swiper {
    width: 100%;
    height: 100%;
}

.to_page {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;

}

.to_page image {
    position: absolute;
    width: 100%;
    height: 100%;
}


.collection_page {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.page_wrap {
    height: 100%;
    background-color: #000080;
}

.think_container {
    width: 100%;
    flex: 1;
    position: relative;
}

.think {
    position: absolute;
    left: 70%;
    top: 40%;
    width: 150rpx;
    height: 150rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
}

.focus_container {
    width: 100%;
    flex: 1;
    position: relative;
}

.focus {
    position: absolute;
    left: 25%;
    top: 20%;
    width: 250rpx;
    height: 250rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
}

.rest_container {
    width: 100%;
    flex: 1;
    position: relative;
}

.rest {
    position: absolute;
    left: 55%;
    top: 20%;
    width: 200rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
}