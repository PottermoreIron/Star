swiper {
    width: 100%;
    height: 100%;
}

swiper-item {
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
}


image {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: -1;
}

.container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.click-style{
    position: absolute;
    width: 3%;
    height: 3%;
    
}


.click-position{
    top:33%;
    left: 36%;
}
.text_area {
    width: 500rpx;
    height: 800rpx;
    position: absolute;
    top: 12%;
    padding: 50rpx;
    line-height: 80rpx;
    font-style: italic;
    font-family: monospace;
    font-weight: bold;
}
.text_border {
    position: absolute;
    width: 100%;
    height: 100%;
    left: -0rpx;
    top: -0rpx;
    border: solid 1rpx white;
    opacity: 0;
}
.active{
    opacity: 1;
}
.unactive{
    opacity: 0;
}
.loading{
    position: absolute;
    width: 30%;
    height: 30%;
    top:35%;
    left: 35%;
    z-index: 1;
}